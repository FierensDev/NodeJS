<head>
  <title>todo List</title>
</head>

<body>
  <h1>todo</h1>

  <form method="POST" action="/task">
    <input type="text" placeholder="Nouvelle tâche" name="task" autofocus>
    <button type="submit">Ajouter</button>
  </form>

  <h3>Tâches</h3>
  <ul>
    <% tasks.forEach((task, index) => { %>
      <li>
      <% if (task.done) { %>
          <s><%= task.title %></s>
          <a href="/task/<%= index %>/delete">Supprimer</a>
      <% } else { %>
          <%= task.title %>
          <a href="/task/<%= index %>/done">Terminé</a>
        <% } %>
        </li>
    <% }) %> 
  </ul>
</body>